{
  "name": "@react-dnd/asap",
  "version": "4.0.1",
  "description": "High-priority task queue for Node.js and browsers",
  "keywords": [
    "event",
    "task",
    "queue"
  ],
  "license": "MIT",
  "main": "dist/cjs/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    "import": "./dist/esm/index.mjs",
    "require": "./dist/cjs/index.js",
    "types": "./dist/types/index.d.ts"
  },
  "scripts": {
    "clean": "shx rm -rf dist/",
    "build_types": "tsc -b .",
    "build_esm": "swc -C module.type=es6 -d dist/esm src/",
    "build_cjs": "swc -C module.type=commonjs -d dist/cjs src/",
    "esm_hack": "node ../../scripts/esmify.mjs",
    "build": "run-s build_types build_esm build_cjs esm_hack"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/react-dnd/react-dnd"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.2.161",
    "@types/jest": "^24.9.1",
    "@types/node": "^17.0.23",
    "npm-run-all": "^4.1.5",
    "shx": "^0.3.4",
    "typescript": "^4.6.3"
  }
}
