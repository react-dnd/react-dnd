{
  "name": "react-dnd-touch-backend",
  "version": "17.0.0",
  "description": "Touch backend for react-dnd",
  "type": "module",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/cjs/index.js",
      "import": "./dist/esm/index.js"
    }
  },
  "sideEffects": false,
  "license": "MIT",
  "author": "Long Ho <holevietlong@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/react-dnd/react-dnd.git"
  },
  "scripts": {
    "clean": "shx rm -rf dist/",
    "build_types": "tsc -b .",
    "build_esm": "swc -C module.type=es6 -d dist/esm src/",
    "build_commonjs": "swc -C module.type=commonjs -d dist/cjs src/",
    "add_pkgjson": "node ../../scripts/createDistPackageJson.mjs",
    "build": "run-s clean build_types build_esm build_commonjs add_pkgjson"
  },
  "dependencies": {
    "@react-dnd/invariant": "workspace:^",
    "dnd-core": "workspace:^"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.3.23",
    "@types/jest": "^29.2.4",
    "npm-run-all": "^4.1.5",
    "shx": "^0.3.4",
    "typescript": "~4.8.4"
  }
}
